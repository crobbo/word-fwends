<% if !flash.empty? %>
    <div class="flash-messages absolute top-0 w-full" data-controller="display">
        <% flash.each do |type, message| %>
            <div class="flash-message text-center bg-white text-pink-500 font-bold text-2xl" 
                 data-display-target="flash" data-action="load@window->display#hide">
                <%= message %>
            </div>
        <% end %>
    </div>
    <% flash.clear %>
<% end %>
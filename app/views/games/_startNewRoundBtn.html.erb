<% if game.over? && session[:player_id] == game.find_player(game.active_player).id %>
    <div class="flex justify-center items-center">
        <div class="my-5 w-full sm:w-2/5 md:w-1/5">
        <%= button_to 'Begin Next Round', game_path(game), method: :delete, class: 
                                                                                    "bg-pink-500
                                                                                    hover:bg-pink-700
                                                                                    text-sm
                                                                                    text-white
                                                                                    font-bold
                                                                                    py-2 px-4 
                                                                                    rounded-full" %>
        </div>
    </div>
<% elsif game.over? && session[:player_id] != game.find_player(game.active_player).id %>
    <div class="flex justify-center items-center">
        <div class="my-5 w-2/3 sm:w-2/5 md:w-1/5">
            <span class="text-sm font-light"><%= game.find_player(game.active_player).name.capitalize %> started the new round!</span>
            <div class="bg-pink-500 hover:bg-pink-700 text-sm text-white font-bold py-2 px-4 rounded-full cursor-pointer" onClick="window.location.reload();">
                Join <%= game.find_player(game.active_player).name.capitalize %> 
            </div>
        </div>
    </div>
<% end %>  
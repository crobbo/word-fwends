<div class="flex flex-col justify-between md:justify-start h-screen" data-controller="input keyboard" data-action="keyboard:keyPress->input#keydown">
    <!-- Player info / result section -->
    <div class="my-5 flex flex-col justify-center text-center text-3xl text-white">
        <div class="my-5 font-bold">
            <span class="text-orange-500"><%= @game.find_player(@game.active_player).name.capitalize %></span>
            <span> is playing ðŸ”¥</span>
        </div>
        <div id="<%= @game.id %>_result_section" class="flex flex-col items-center justify-center mx-2">
            <%= render 'games/result', :game => @game %>
        </div>
    </div>
    <!--  main game area  -->
    <div class="flex">
        <div class="hidden md:flex md:flex-col md:w-2/5">
            <div class="p-10">
            </div>
        </div>
        <div class="flex flex-col w-full max-w-lg mx-auto" data-action="keydown->keyboard#keyPress">
           <%= render "game", :game => @game %>
          <div class="mt-20">
            <%= render "keyboard", :game => @game %>
         </div>
        </div>
        <div class="hidden md:flex md:flex-col md:w-2/5">
       </div>

</div>

<!-- Game setup / URL share screens -->
<% if !@game.ready %>
    <%= render "gameSetup", :game => @game %>
<% end %>
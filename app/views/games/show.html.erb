<div class="min-h-100px flex flex-col justify-center text-center text-3xl font-bold text-white">
  <% if @game.win? %>
    You Win!
  <% end %>
</div>

<div class="flex">
  <div class="md:flex md:w-2/5 justify-end">
    <div class="w-1/2">
        <% if @game.over? %>
          <h1 class="text-5xl font-semibold text-indigo-500 uppercase text-center">
            <%= @game.word %>
          </h1>
          <!-- <p class="mt-5 text-white text-xl italic">Write a descriptive definition here to educate the user.</p>             -->
        <% end %>
    </div>
  </div>
  <div class=" flex flex-col w-full max-w-lg mx-auto">       
      <%= render "game", :game => @game %>  
  </div> 
  <div class=" md:block md:w-2/5">
    <div class="w-2/3">
      <h1 class="text-indigo-500 text-2xl font-bold">Play with a friend</h1>
      <p class="text-indigo-100">Compete with a friend in a head to head match. Best of 5 games wins it!</p>
      <div class="flex items-center mt-3">
        <span class="bg-gray-300 p-2 rounded-sm text-slate-800"><%= 'wordfwends.com/' + @game.id %></span>
        <span class="material-icons text-white text-7xl pl-2">
          file_copy 
        </span>
      </div>
    </div>
  </div>
</div>

<div class="max-w-xl mx-auto mt-10">
  <%= render "keyboard", :game => @game %>
</div>


<% if @game.guesses.count > 0 %>
        <%= tag.div id: "row", class: ["flex my-1 justify-center", "hidden": @game.guesses.count == 0 ] do %>
            <% @game.guesses.count.times do |i| %>
                <% if [0,1,2,3,4].include?(i) %>
                    <%= render "guess/guess", :guess => @game.guesses.all[i] %>
                <% end %>
            <% end %>
        <% end %>    
        <%= tag.div id: "row", class: ["flex my-1 h-16 justify-center", "hidden": @game.guesses.count < 6 ] do %>
            <% @game.guesses.count.times do |i| %>
                <% if [5,6,7,8,9].include?(i) %>
                    <%= render "guess/guess", :guess => @game.guesses.all[i] %>
                <% end %>
            <% end %>
        <% end %>    
        <%= tag.div id: "row", class: ["flex my-1 h-16 justify-center", "hidden": @game.guesses.count < 11 ] do %>
            <% @game.guesses.count.times do |i| %>
                <% if [10,11,12,13,14].include?(i)  %>
                    <%= render "guess/guess", :guess => @game.guesses.all[i] %>
                <% end %>
            <% end %>
        <% end %> 
        <%= tag.div id: "row", class: ["flex my-1 h-16 justify-center", "hidden": @game.guesses.count < 16 ] do %>
            <% @game.guesses.count.times do |i| %>
                <% if [15,16,17,18,19].include?(i) %>
                    <%= render "guess/guess", :guess => @game.guesses.all[i] %>
                <% end %>
            <% end %>
        <% end %> 
